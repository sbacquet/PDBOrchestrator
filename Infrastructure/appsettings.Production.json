{
  "CertificatePath": "conf.d/misys_global_ad.pfx",

  "Akka:LogLevel": "INFO",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information"
    },
    "WriteTo": [
      {
        "Name": "File",
        "Args": {
          "path": "./log/PDBOrchestrator-{{SERVER_INSTANCE}}-.txt",
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}][{LogSource}] {Message:l}{NewLine}{Exception}",
          "rollingInterval": "Day"
        }
      },
      {
        "Name": "Http",
        "Args": {
          "requestUri": "http://localhost:8081"
        }
      }
    ]
  }
}
